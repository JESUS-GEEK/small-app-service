/* pages/all-orders/index.wxss */
.title{
  width:100%;
  height:80rpx;
  margin:0 auto;
  text-align:center;
  line-height:80rpx;
}
.main-box{
  width:100%;
  margin:0 auto; 
  margin-top:-10rpx;
  background:#f5f5f5;
}
.row-box{
  line-height:60rpx;
}
.main-box .van-tab{
  font-size:34rpx;
}
/* tab底部下划线的宽度 */
.van-tabs__line{
  width:170rpx !important;
  margin-left:-45rpx;
}
.item-box{
  width:95%;
  background-color: #fff;
  margin:0 auto;
  margin-top:30rpx;
  padding-bottom:20rpx;

}
.items{
  margin:40rpx;
  padding-top:20rpx;
}
.status{
  color:#e6454a;
  float:right;
}
.order-pic{
  width:64rpx;
  height: 64rpx;
  display: inline-block;
}
.driver-name{
  vertical-align:top;
  padding-left:20rpx;
}
.service{
  color:#666;
  padding-left:20rpx;
  font-size: 30rpx;
}
.driver-info{
  display: inline-block;
  vertical-align: top;
  margin-top: 15rpx;
}
.items .van-divider{
  margin:20rpx !important;
}