<view class="my-bar">
<v-navigationBar title="{{navigationBarTitle}}" types="{{contact}}" url="{{urls}}"></v-navigationBar>
	<image mode='aspectFill' class='background' src='{{myBg}}'></image>	
	<view class="my-box">
		<view wx:if="{{hasLogin}}" class="head-bar">
			<button bindgetuserinfo="goLogin" class="userinfo-avatar" style="background-image: url({{userInfo.avatarUrl}})" size="default"></button>
			<view class="name-box">
				<view class="name">{{userInfo.nickName}}</view>
				<!-- <view wx:if="{{apiUserInfoMap.userLevel}}" class="state">{{apiUserInfoMap.userLevel.name}}</view>
  			<view wx:else class="state">非会员</view> -->
			</view>
		</view>
		<view wx:else class="login-btn">
			<van-button type="default" block open-type="getUserInfo" bind:getuserinfo="processLogin">立即登录</van-button>
		</view>	
	</view>
</view>
