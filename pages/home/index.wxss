/* pages/home/index.wxss */
/* 头部 */
.navigation-container {
  position: fixed;
  width: 100%;
  z-index: 99;
  top: 0;
  left: 0;
  background-color: #ffffff;
}
.navigation-bar {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.navigation-buttons {
  display: flex;
  align-items: center;
  margin-left: 10px;
  border: 1px solid rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  border-radius: 15px;
  background-color: transparent;
}
.nav-img{
  height: 16px;
  width: 16px;
}
.navigation-title {
  position: absolute;
  left: 104px;
  right: 104px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 头部结束 */
.container-body{
  width:100%;
  margin:0 auto;
  /* margin-top:60rpx; */
}
.maMap{
  width: 100%;
  height: 630rpx;
}
.van-tab{
  font-size:30rpx !important; 
}
.bottom-box{
  width:96%;
  margin:0 auto;
  /* border:1px solid #afa; */
}
.car-box{
  width:300rpx;
  height:200rpx;
  margin-left:60rpx;
}
.car-info{
  display:inline-block;
